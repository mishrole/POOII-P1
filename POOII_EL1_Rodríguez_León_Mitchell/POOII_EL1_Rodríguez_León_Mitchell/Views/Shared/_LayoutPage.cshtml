<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light menu">
        @Html.ActionLink("THE PLAZA", "Index", "Plaza", null, new { @class = "navbar-brand mr-auto" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    @Html.ActionLink("HOMBRE", "Man", "Plaza", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("MUJER", "Women", "Plaza", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("BLOG", "Blog", "Plaza", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("CLIENTE", "Index", "Clientes", null, new { @class = "nav-link" })
                </li>
            </ul>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
    </div>

    <footer class="navbar navbar-light bg-light">
        <span class="copy mx-auto">Copyright &copy; @DateTime.Now.Year - Todos los derechos reservados</span>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
